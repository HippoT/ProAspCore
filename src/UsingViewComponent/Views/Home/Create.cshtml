
@model City
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Population">Population</label>
        <input asp-for="Population" type="text" class="form-control" />
    </div>

    <button type="submit" bs-button-color="danger" class="btn btn-primary">Add</button>
    <button class="btn btn-primary">Reset</button>
    <a bs-button-color="primary" asp-action="Index">Cancel</a>
</form>
